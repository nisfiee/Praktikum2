#include <iostream>
#include <math.h>

using namespace std;

void main()
{
	int a, b, hasil;
	double c, d, hasil2;

	cout<< "Masukkan Nilai 'a' dan 'b' ! " <<endl;
	cout<< "a = ";
	cin>> a;										//input a
	cout<< "b = ";
	cin>> b;										//input b
	cout<< endl;
	cout<< "### Operator Aritmatika (int)" <<endl;

	hasil = a + b;
	cout<< "a + b = " <<hasil <<endl;				//input a tambah input b

	hasil = a - b;									//input a kurang input b
	cout<< "a - b = " <<hasil <<endl;

	hasil = a * b;									//input a kali input b
	cout<< "a * b = " <<hasil <<endl;

	hasil = a / b;									//input a bagi input b
	cout<< "a / b = " <<hasil <<endl;

	hasil = a % b;									//input a mod input b
	cout<< "a % b = " <<hasil <<endl;

	cout<< "### Operator Matematika (Float)" <<endl;
	cout<< "Masukkan Nilai 'c' dan 'd' ! " <<endl;
	cout<< "c = ";
	cin>> c;										//input nilai c
	cout<< "d = ";
	cin>> d;										//input nilai d
	cout<< endl;

	hasil2 = c/d;									//c bagi d
	cout<< "c/d = " <<hasil2 <<endl;

	hasil2 = pow(c,d);								// c to d
	cout<< "c ^ d = " <<hasil2 <<endl;

	hasil2 = sqrt(c);								//square root of c (akar kuadrat dari c)
	cout<< "akar a = " <<hasil2 <<endl;

	hasil2 = sqrt(d);								//square root of d (akar kuadrat dari d)
	cout<< "akar b = " <<hasil2 <<endl;

	system ("pause");
}
